                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.Column="0" Fill="Orange"/>
                                <Image Grid.Column="0" Source="/Assets/Icons/appbar.man.suitcase.png" Height="50" Width="50" Margin="-5"/>
